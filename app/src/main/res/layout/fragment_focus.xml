<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FocusFragment"
    android:orientation="vertical"
    android:background="#333C4B"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <Spinner
            android:id="@+id/focus_mode_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/mode_options"
            android:layout_gravity="start"
            android:padding="10dp"
            android:background="@drawable/button_bg"
            android:layout_marginHorizontal="16dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="background noise"
            android:layout_marginHorizontal="16dp"/>




    </LinearLayout>


    <LinearLayout
        android:id="@+id/chronometer_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_margin="16dp"
        android:background="@drawable/focus_chronometer_bg"
        android:elevation="5dp"
        android:gravity="center">

        <Chronometer
            android:id="@+id/FocusChronometer"
            android:layout_width="wrap_content"
            android:elevation="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHighlight="@color/white"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="50sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="36dp">
        <Button
            android:elevation="10dp"
            android:layout_margin="16dp"
            android:id="@+id/FocusStartBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="START"/>
        <Button
            android:elevation="10dp"
            android:id="@+id/FocusPauseBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:background="@drawable/button_bg"
            android:text="PAUSE"/>
        <Button
            android:elevation="10dp"
            android:layout_margin="16dp"
            android:id="@+id/FocusStopButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="STOP"/>
        <Button
            android:elevation="10dp"
            android:id="@+id/FocusResumeButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:background="@drawable/button_bg"
            android:text="RESUME"/>


    </LinearLayout>




</LinearLayout>