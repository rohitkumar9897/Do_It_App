<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_dark"
    tools:context=".Profile"
    android:padding="15dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_back" />


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="5dp"
        app:cardCornerRadius="200dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/rohit_profile_pic"
            android:background="@drawable/profile_pic_bg"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/profile_hey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey, Priyanshu!!"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="24dp"
        android:textColor="@color/white"/>


    <TextView
        android:drawableLeft="@drawable/ic_settings"
        android:id="@+id/profile_settings_btn"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="PROFILE SETINGS"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_textview_bg"
        android:textSize="16sp"
        android:padding="8dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="CHANGE THEME"
        android:drawableLeft="@drawable/ic_dark_mode_24"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/custom_textview_bg"
        android:textSize="16sp"
        android:padding="8dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="ABOUT"
        android:drawableLeft="@drawable/ic_about"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_textview_bg"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="@color/white"/>



    <TextView
        android:id="@+id/profile_share"
        android:drawableLeft="@drawable/ic_share"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="SHARE"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_textview_bg"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="@color/white"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/btn_logout"
        android:drawableLeft="@drawable/ic_logout"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="LOG OUT"
        android:gravity="center"
        android:background="@drawable/custom_textview_bg"
        android:padding="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

</LinearLayout>